  "version": "0.2.0",
  "configurations": [
    {
      "name": "Flask : Run App",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_ENV": "DEV", "FLASK_APP": "app.py", "FLASK_DEBUG": "1" },
      "args": ["run", "--no-debugger", "--no-reload"],
      "cwd": "${workspaceFolder}/srv",
      "jinja": true,
      "autoStartBrowser": false
    },
    {
      "name": "Flask : Migrate DB",
      "type": "debugpy",
      "request": "launch",
      "module": "flask",
      "env": { "FLASK_ENV": "MIGRATION", "FLASK_APP": "app.py", "FLASK_DEBUG": "1" },
      "args": ["db", "migrate", "-m 'Initial migration'"],
      "cwd": "${workspaceFolder}/srv",
      "justMyCode": false,
      "jinja": true,
      "autoStartBrowser": false
    }
  ]
}
